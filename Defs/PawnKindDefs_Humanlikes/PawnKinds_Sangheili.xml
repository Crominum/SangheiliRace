<Defs>

  <!-- ============================ Swagheili Base ========================== -->

  <PawnKindDef Name="SwagheiliBase" Abstract="True">
    <defaultFactionType>SwagheiliFaction</defaultFactionType>
    <race>Alien_Sangheili</race>
	<backstoryCategories>
			<li>SangheiliBackstory</li>
  	</backstoryCategories>
    <chemicalAddictionChance>0.005</chemicalAddictionChance>
