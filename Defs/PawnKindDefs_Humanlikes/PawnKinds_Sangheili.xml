	<race>Alien_Sangheili</race>
    <itemQuality>Normal</itemQuality>
    <isFighter>false</isFighter>
    <gearHealthRange>
      <min>0.75</min>
      <max>2.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>900</min>
      <max>1500</max>
    </apparelMoney>
    <weaponMoney>
      <min>1400</min>
      <max>2500</max>
    </weaponMoney>
    <weaponTags>
	  <li>Gun</li>
      <li>NonNeolithicOnlyMelee</li>
      <li>MedievalMeleeBasic</li>
    </weaponTags>
    <techHediffsMoney>
      <min>200</min>
      <max>300</max>
