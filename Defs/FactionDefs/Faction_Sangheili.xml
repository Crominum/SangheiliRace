<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<FactionDef>
			<defName>SangheiliFaction</defName>
			<label>Sangheili Tribe</label>
		<description>A developed colony collectively owned by the Sangheili race.</description>
		<pawnsPlural>Sangheilis</pawnsPlural>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<settlementGenerationWeight>1</settlementGenerationWeight>
		<canMakeRandomly>true</canMakeRandomly>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>Kaidon</leaderTitle>
		<startingGoodwill>
			<min>-10</min>
			<max>40</max>
		</startingGoodwill>
		<goodwillDailyGain>0.10</goodwillDailyGain>
		<goodwillDailyFall>0.20</goodwillDailyFall>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<techLevel>Ultra</techLevel>
		<backstoryCategories>
			<li>SangheiliBackstory</li>
		</backstoryCategories>
		<naturalColonyGoodwill>
			<min>-20</min>
			<max>80</max>
		</naturalColonyGoodwill>
		<visitorTraderKinds>
			<li>Visitor_Outlander_Standard</li>
		</visitorTraderKinds>
		<caravanTraderKinds>
			<li>Caravan_Outlander_BulkGoods</li>
			<li>Caravan_Outlander_CombatSupplier</li>
			<li>Caravan_Outlander_Exotic</li>
		</caravanTraderKinds>
		<baseTraderKinds>
			<li>Base_Outlander_Standard</li>
		</baseTraderKinds>
		<allowedArrivalTemperatureRange>
			<min>-50</min>
			<max>45</max>
		</allowedArrivalTemperatureRange>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
		  </points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<kindDef>Combat</kindDef>
				<options>
					<SangheiliColonist>50</SangheiliColonist>
					<SangheiliGuard>90</SangheiliGuard>
					<SangheiliMinor>250</SangheiliMinor>
					<SangheiliHonor>100</SangheiliHonor>
				</options>
			</li>
			<li>
				<kindDef>Trader</kindDef>
				<traders>
					<SangheiliTrader>1</SangheiliTrader>
				</traders>
				<carriers>
					<Muffalo>2</Muffalo>
					<Dromedary>2</Dromedary>
				</carriers>
				<guards>
					<SangheiliGuard>90</SangheiliGuard>
					<SangheiliHonor>100</SangheiliHonor>
				</guards>
			</li>
			<li>
				<kindDef>Peaceful</kindDef>
				<options>
					<SangheiliColonist>50</SangheiliColonist>
					<SangheiliGuard>90</SangheiliGuard>
					<SangheiliMinor>250</SangheiliMinor>
					<SangheiliHonor>100</SangheiliHonor>
				</options>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<SangheiliColonist>50</SangheiliColonist>
					<SangheiliGuard>90</SangheiliGuard>
					<SangheiliMinor>250</SangheiliMinor>
					<SangheiliHonor>100</SangheiliHonor>
				</options>
			</li>
		</pawnGroupMakers>
		<homeIconPath>World/SangheiliBase</homeIconPath>
		<expandingIconTexture>World/SangheiliBase</expandingIconTexture>
	</FactionDef>

</Defs>