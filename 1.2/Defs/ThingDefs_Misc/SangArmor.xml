<Defs>

<!-- ======================MINOR ARMOR====================== -->

	<ThingDef ParentName="ArmorHelmetMakeableBase">
		<defName>MinorHelm</defName>
		<label>Minor Helmet</label>
		<techLevel>Spacer</techLevel>
		<description>A sleek and sturdy desgined helmet ment to fit the lower ranks of sangheili forces. While not as flashy as other of its race's design, it still protects the wearer from a fair amount of harm.</description>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>SangArmor</researchPrerequisite>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>10</Crafting>
			</skillRequirements>
		</recipeMaker>
		<statBases>
			<WorkToMake>22000</WorkToMake>
			<MaxHitPoints>150</MaxHitPoints>
			<Mass>1.8</Mass>
			<Flammability>0.4</Flammability>
			<ArmorRating_Sharp>1.15</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.40</ArmorRating_Blunt>
			<ArmorRating_Heat>0.70</ArmorRating_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>25</Plasteel>
			<Uranium>5</Uranium>
		</costList>
		<graphicData>
			<texPath>Apparel/Ground/MinorHelmet</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1.6</drawSize>
		</graphicData>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/MinorHelm/Minorhelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
				<li>SangheiliArmor</li>
			</tags>
			<defaultOutfitTags>
				<li>SangheiliArmor</li>
			</defaultOutfitTags>
		</apparel>
		<thingSetMakerTags>
			<li>RewardSpecial</li>
		</thingSetMakerTags>
	</ThingDef>

